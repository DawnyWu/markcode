<nav id="workflowNavbar" class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to root_path, id: "logo", class: "navbar-brand" do %>
        Markcode
      <% end %>
    </div>

    <div id="navbar" class="navbar-collapse collapse">

      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= form_tag search_path, method: :get, class: "navbar-form", role: "search" do |f| %>
            <div class="form-group">
              <%= text_field_tag :q, params[:q], class: "form-control" %>
            </div>
          <% end %>
        </li>
        <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.name %> <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <!-- <li role="separator" class="divider"></li> -->
              <li>
                <%= link_to "注销", destroy_user_session_path, method: :delete %>
